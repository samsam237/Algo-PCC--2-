<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Canvas Example</title>
</head>
<body>


    <script>
        fetch('http://localhost:3000/canvas')
        .then(response => response.text())
        .then(dataUrl => {
            const img = new Image();
            img.src = dataUrl;
            document.body.appendChild(img);
        })
        .catch(error => console.error('Erreur lors de la récupération du canvas :', error));

    </script>
</body>
</html>
